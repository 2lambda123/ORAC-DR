# _REMOVE_BIAS_
#
# Subtracts a bias frame
#
# TASK: CCDPACK - DEBIAS
#
# user-accessible mapping and parameters
#
#
# other parameters
#
$osuffix = ($_REMOVE_BIAS_{SUFFIX_OUT} || "_db");
$hidden = "usecon=true zero=0";

# generate input and output files 
($in,$out) = $Frm->inout($osuffix);

# Debias all the frame using a 0 bias contribution.  Thee is no bad-pixel
# masking.  Do not create a variance array.
$Mon{"ccdpack_red"}->obeyw("debias","in=$in out=$out $hidden reset accept");
#
print colored ("Orac says: $in to $out: Bias removed\n",'magenta');
#
$Frm->file($out);			# obligatory update step

# _REMOVE_BIAS_
#
# Subtracts a bias frame
#
# TASK: CCDPACK - DEBIAS
#
# user-accessible mapping and parameters
#
$user = "";
#
# other parameters
#
$isuffix = ($_REMOVE_BIAS_{SUFFIX_IN} || "_bp");
$osuffix = ($_REMOVE_BIAS_{SUFFIX_OUT} || "_db");
$header = "in=$Orac{File}$isuffix out=$Orac{File}$osuffix";
$hidden = "usecon=true zero=0";
print "ORAC DIR IS ",$orac_dir,"\n";
# Debias all the frame using a 0 bias contribution.  Thee is no bad-pixel
# masking.  Do not create a variance array.
$Orac{"Mon_ccdpack_red"}->obeyw("debias","$header $user $hidden reset accept");
print "Command was: debias $header $user $hidden reset accept\n";

print "Orac says: $Orac{File} Bias removed\n";

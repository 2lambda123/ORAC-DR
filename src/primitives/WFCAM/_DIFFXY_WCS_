    # Loop for all the files in the group.  By default the first frame in
    # the list will have zero shift as it will be used as the reference.

    my $i = 0;
    my $ref;
    foreach my $frm ($Grp->allmembers) {
        $i++;
        if ($i == 1) {
            push @xoffswcs,0.0;
            push @yoffswcs,0.0;
            $ref = $frm->file;
            next;
        }

        # Get the offsets now.

        my $inf = $frm->file;
        my $errmsg = "";
        my $xoff = 0.0;
        my $yoff = 0.0;
        my $retval = cir_diffxywcs($inf,$ref,$xoff,$yoff,$errmsg);

        # If there was a problem, just assign zero and move on

        if ($retval != CIR_OK) {
            $xoff = 0.0;
            $yoff = 0.0;
        }
        push @xoffswcs,$xoff;
        push @yoffswcs,$yoff;
    }

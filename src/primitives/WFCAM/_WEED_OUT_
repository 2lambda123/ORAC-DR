    my $minflux = (defined $_WEED_OUT_{MIN} ? $_WEED_OUT_{MIN} : 0);
    my $maxflux = (defined $_WEED_OUT_{MAX} ? $_WEED_OUT_{MAX} : 65535);
   
    # Do stats on input frame and see what the value for the first
    # image extension is.  If it's not in the required data window, then
    # chuck it.

    _IMSTAT_ HDRUP=1
    my $value = $Frm->getasubframe(1)->uhdr("CIRMED");
    if ($value < $minflux || $value > $maxflux) {
        $Frm->isgood(0);
    }


my $outfile = (defined $_PIXSTATS_{OUT} ? $_PIXSTATS_{OUT} : "");
if (! $outfile) {
    $outfile = sprintf("pixstats_%s_%05d%s",$Frm->hdr("ORACUT"),$Grp->name,
	$Frm->fitssuffix);
}

# Get the 'subframe'. Note that the CIRDR routine only works for
# for single extension FITS files. This is currently OK, but may need
# a rethink in the event that more than one image extension exists.

my $subfile = $Frm->getasubframe(1)->file;
orac_print("Adding $subfile into stats file $outfile\n");
my $all = [$subfile];
my ($retval,$errmsg);
$retval = cir_pixstats($all,1,$outfile,$errmsg);
if ($retval != CIR_OK) {
    orac_throw("CIR_PIXSTATS: Failed in _PIXSTATS_\n$errmsg\n");
}    

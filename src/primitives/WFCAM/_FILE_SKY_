    my $fname = $_FILE_SKY_{NAME};

    # Check that there is a file name

    if (! $fname) {
        orac_throw "_FILE_SKY_: No file name specified\n";
    }

    # Otherwise file it

    my $tmpobj = $Frm->new($fname);
    $Cal->sky($fname);
    orac_print $tmpobj->file . " filed as the current sky\n";
    $Cal->skyindex->add($tmpobj->file,$tmpobj->hdr);
    orac_print $tmpobj->file . " added to index file\n\n";

# Quick primitive to remove column and row structure from
# a NOD_CHOP_SCAN mosaic. Needs beefing up, especially to
# make sure that we're actually doing NOD_CHOP_SCAN, and
# most definitely needs documentation!

my $makemos = $Frm->uhdr( "MAKE_MOSAIC" );
if( $makemos ) {
  my $mosGrp = $Grp->uhdr("MOSAIC_GROUP");
  my $scanindex = $Frm->uhdr( "SCAN_INDEX" ); 
  {
    my $Frm = $mosGrp->frame( $scanindex );
    _REMOVE_COLUMN_ROW_STRUCTURE_
  }
}

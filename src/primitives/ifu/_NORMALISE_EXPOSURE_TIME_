my $in = $Grp->file;
my $out = $Grp->raw . "_nsp";

my $etime = $Frm->uhdr("ORAC_EXPOSURE_TIME");
$Mon{'kappa_mon'}->obeyw("cdiv", "in=$in scalar=$etime out=$out title=$out");
orac_print "$in to $out: Normalised to 1 second exposure time\n";

# Update the group object
$Grp->file($out);
      
orac_print "\n";

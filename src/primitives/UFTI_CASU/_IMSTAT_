    # Get the list of parameters...

    my $cpmloc = $_IMSTAT_{CPMLOC};
    my $hdrup = $_IMSTAT_{HDRUP};

    # Loop for each file ...

    my ($value,$errmsg,$retval);
    foreach my $fr ($Grp->allmembers) {
        $retval = cir_imstat($fr->file,$cpmloc,$hdrup,$value,$errmsg);
        if ($retval != CIR_OK) {
            orac_err("CIR_IMSTAT: failed in _IMSTAT_\n$errmsg\n");
            return(ORAC__ERROR);
        }
        $fr->uhdr("CIRMED",$value);
    }


    # Get parameters

    my $inf = $_FLAT_NORMAL_{IN};
    my $nf = $_FLAT_NORMAL_{NF};

    # Do the operation

    my ($retval,$errmsg);
    $errmsg = "";
    $retval = cir_imdivk($inf,$nf,$errmsg);
    if ($retval != CIR_OK) {
        orac_err("CIR_IMDIVK: failed in _FLAT_NORMAL_\n$errmsg\n");
        return(ORAC__ERROR);
    }

    # Now update the header...

    my $tmpFrm = $Frm->new($inf);
    $tmpFrm->update_header("CCDMEAN",TFLOAT,$nf,
        "Mean of medians over all chips");

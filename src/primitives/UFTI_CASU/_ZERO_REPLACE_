    for my $i (1 .. $Frm->findnsubs) {
        my $frm = $Frm->getasubframe($i);

        # Do the replacement...
 
        my ($retval,$errmsg);
        $retval = cir_imrepl($frm->file,0.0,1.0,$errmsg);
        if ($retval != CIR_OK) {
	    orac_throw("CIR_IMREPL: failed in _ZERO_REPLACE_\n$errmsg\n");
        }
    }

# -*- perl -*-

for my $n (1..$Frm->nfiles) {

  my $beamain = $Frm->file;
  (my $beamaout = $beamain) =~ s/\./_/;
  $Mon{ndfpack_mon}->obeyw("ndfcopy","in=$beamain out=$beamaout");
  
  # if FITS file exists delete it otherwise convert will fail
  unlink "$beamaout.fits";
  $Mon{'ndf2fits'}->obeyw("ndf2fits","in=$beamaout out=$beamaout.fits profits proexts prohis");
  orac_print "$beamaout converted to FITS\n";

}

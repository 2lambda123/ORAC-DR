=cut

# write mosaicking input text file
my $intmp = new ORAC::TempFile;
my $ntimes = $Frm->nfiles / 4.0;
for my $i (1..$ntimes) {
    for my $j (1..4) {
	print {$intmp->handle} $Frm->file($i) ."\n";
    }
    my ($in, $out) = $Frm->inout('_arr', 0);
    orac_print("Mosaicking subarrays \n");
    $Mon{ccdpack_reg}->obeyw("makemos","in=^".$intmp->file." nousevar out=$out");

    $Frm->files( $out );
}

# create output filename, derived from first input file
# since this is a many to one operation


# store the single output file

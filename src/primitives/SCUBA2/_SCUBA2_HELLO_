# Print welcome message
orac_print "#".$Frm->uhdr("ORAC_OBSERVATION_NUMBER").
    " Observing mode: ". $Frm->uhdr("ORAC_OBSERVATION_MODE").
    ( $Frm->hdr("STANDARD") ? " / standard":  "" ) ."\n";

if ($Frm->hdr("SIMULATE")) {
    orac_warn(" *** This observation is simulated data! ***\n");
}




my $file = $_PRIM_ARGS_->{FILE};
my $group = ( $_PRIM_ARGS_->{GROUP} ? 1 : 0 );

if( defined( $file ) ) {

  # Create a new object from the given file.
  my $Obj;
  if( $group ) {
    $Obj = $Grp->new( $file );
  } else {
    $Obj = $Frm->new( $file );
  }

  $Obj->file( $file );
  # Display it.
  $Display->display_data( $Obj ) if ( defined( $Display ) );

}

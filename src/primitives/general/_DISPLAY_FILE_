All Rights Reserved.

=cut

my $file = $_PRIM_ARGS_->{FILE};
my $group = ( $_PRIM_ARGS_->{GROUP} ? 1 : 0 );

if( defined $file && defined $Display ) {

  # Create a new object from the given file.
  my $Obj;
  if( $group ) {
    $Obj = $Grp->new;
  } else {
    $Obj = $Frm->new;
  }

  $Obj->file( $file );

  # Display it.
  $Display->display_data( $Obj );

}

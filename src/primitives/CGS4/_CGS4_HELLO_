# -*-perl-*-

# switch 1-integration HDS containers to 1 NDF

if ($Frm->nfiles == 1) {

  my ($in,$out) = $Frm->inout("_raw");
  $Mon{"ndfpack_mon"}->obeyw("ndfcopy","in=$in out=$out");
  $Frm->files($out);
  $Frm->mergehdr;  

  # this is 1x1, nexp=1. Display it as _raw (PH 2000-09-12)
  $Display->display_data($Frm) if (defined $Display);
}

# switch history on

foreach my $frame ($Frm->files) {
#  $Mon{"ndfpack_mon"}->obeyw("hisset","ndf=$frame");
}


# Make sure that the Grp contains a uhdr value for NDIMS
# NDIMS is used by the divide by standard primitive to determine
# whether to divide by an image or a spectrum
# Always 2-D to start with
$Grp->uhdr("NDIMS", 2);

# Build the nightlog on the fly
_NIGHT_LOG_ OUT=1

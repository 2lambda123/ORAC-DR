# _MASK_BAD_PIXELS_                                                           
#
# sets bad pixels to "bad" by adding a pixel mask
#
# TASK: KAPPA - ADD
#
# user-accessible mapping and parameters
#
$mask = ($_MASK_BAD_PIXELS_{BAD_PIXEL_MASK} || "default");
$osuffix = ($_MASK_BAD_PIXELS_{SUFFIX_OUT} || "_bp");
$user = "in2=$data_out/$mask";
#
# other parameters
#
$header = "in1=$data_in/$Orac{File} out=$Orac{File}$osuffix";
$hidden = "";

# Add the mask which comprises bad pixels and zero elsewhere.
$Orac{"Mon_kappa_mon"}->obeyw("add","$header $user $hidden");
print "Command was: add $header $user $hidden\n";
#
print "\nOrac says: $Orac{File} Bad pixels done\n";

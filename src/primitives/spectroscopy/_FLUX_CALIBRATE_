                    M6 => 0.36,
                  );

  # (K-L') colour by spectral type.
    my %kminuslprime = (
                         A0 => 0.00,
                         A1 => 0.00,
                         A2 => 0.01,
                         A3 => 0.01,
                         A4 => 0.02,
                         A5 => 0.02,
                         A6 => 0.02,
                         A7 => 0.03,
                         A8 => 0.03,
                         A9 => 0.03,
                         F0 => 0.03,
                         F1 => 0.03,
                         F2 => 0.03,
                         F3 => 0.03,
                         F4 => 0.04,
                         F5 => 0.04,
                         F6 => 0.04,
                         F7 => 0.04,
                         F8 => 0.04,
                         F9 => 0.05,
                         G0 => 0.05,
                         G1 => 0.05,
                         G2 => 0.05,
                         G3 => 0.05,
                         G4 => 0.05,
                         G5 => 0.05,
                         G6 => 0.05,
                         G7 => 0.06,
                         G8 => 0.06,
                         G9 => 0.06,
                         K0 => 0.06,
                         K1 => 0.07,
                         K2 => 0.07,
                         K3 => 0.08,
                         K4 => 0.10,
                         K5 => 0.11,
                         K6 => 0.12,
                         K7 => 0.13,
                         K8 => 0.15,
                         K9 => 0.16,
                         M0 => 0.17,
                         M1 => 0.21,
                         M2 => 0.23,
                         M3 => 0.32,
                         M4 => 0.37,
                         M5 => 0.42,
                         M6 => 0.48,
                       );

  # (K-M) colour spectral type.
    my %kminusm = (
                    A0 => 0.00,
                    A1 => 0.01,
                    A2 => 0.01,
                    A3 => 0.02,
                    A4 => 0.02,
                    A5 => 0.03,
                    A6 => 0.03,
                    A7 => 0.03,
                    A8 => 0.03,
                    A9 => 0.03,
                    F0 => 0.03,
                    F1 => 0.03,
                    F2 => 0.03,
                    F3 => 0.03,
                    F4 => 0.02,
                    F5 => 0.02,
                    F6 => 0.02,
                    F7 => 0.02,
                    F8 => 0.02,
                    F9 => 0.01,
                    G0 => 0.01,
                    G1 => 0.01,
                    G2 => 0.01,
                    G3 => 0.01,
                    G4 => 0.01,
                    G5 => 0.01,
                    G6 => 0.00,
                    G7 => 0.00,
                    G8 => 0.00,
                    G9 => -0.01,
                    K0 => -0.01,
                    K1 => -0.02,
                    K2 => -0.02,
                    K3 => -0.03,
                    K4 => -0.04,
                  );

  my $mag=0;
  if ( $wband eq "J" ) {
    $mag = $stdvmag - $vminusk{$stdspec} + $hminusk{$stdspec} + $jminush{$stdspec};
  } elsif ( $wband eq "H") {
    $mag = $stdvmag - $vminusk{$stdspec} + $hminusk{$stdspec};
  } elsif ( $wband eq "K") {
    $mag = $stdvmag - $vminusk{$stdspec};
  } elsif ( $wband eq "L") {
    $mag = $stdvmag - $vminusk{$stdspec} - $kminusl{$stdspec};
  } elsif ( $wband eq "Lprime") {
    $mag = $stdvmag - $vminusk{$stdspec} - $kminuslprime{$stdspec};
  } elsif ( $wband eq "M") {
    $mag = $stdvmag - $vminusk{$stdspec} - $kminusm{$stdspec};
  } elsif ( $wband eq "I") {
    $mag = $stdvmag - $vminusi{$stdspec};
  } else {
    orac_warn "Flux calibration problem - unknown waveband\n";
  }

  if ($mag) {
    # OK to proceed
    orac_print "Magnitude of std in $wband band is: $mag\n";

    # Convert this into W/m2/um

    my $refflux = $reffluxmic{$wband};
    my $stdflux = 10**( -0.4 * $mag ) * $refflux;

    $Mon{'kappa_mon'}->obeyw("cmult", "in=$in out=$out scalar=$stdflux title=$out");

    orac_print "$in to $out: Flux calibrated\n";

    $Grp->file($out);

    # Display the spectrum
    $Display->display_data( $Grp ) if defined $Display;

  } else {
    orac_print "Could not flux calibrate\n";
  }
}

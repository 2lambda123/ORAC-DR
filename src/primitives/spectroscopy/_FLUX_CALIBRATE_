                    B4 => -0.02,
                    B5 => -0.01,
                    B6 => -0.01,
                    B7 => -0.01,
                    B8 => 0.00,
                    B9 => 0.00,
                    A0 => 0.00,
                    A1 => 0.01,
                    A2 => 0.01,
                    A3 => 0.01,
                    A4 => 0.01,
                    A5 => 0.02,
                    A6 => 0.02,
                    A7 => 0.03,
                    A8 => 0.03,
                    A9 => 0.03,
                    F0 => 0.03,
                    F1 => 0.04,
                    F2 => 0.04,
                    F3 => 0.04,

                  );

  # (H-K) colour by spectral type.
    my %hminusk = (
                    O6 => -0.04,
                    O7 => -0.04,
                    O8 => -0.04,
                    O9 => -0.04,
                    B0 => -0.04,
                    B1 => -0.03,

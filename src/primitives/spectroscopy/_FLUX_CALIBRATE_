                       K => 4.07e-10,
                       L => 7.30e-11,
                       Lprime => 5.24e-11,
                       M => 2.12e-11,
                       N => 1.17e-12,
                       Q => 7.80e-14,
                     );

  # Wavelength bands, centres in microns.
    my %waveband = (
                     V => 0.5556,
                     I => 0.88,
                     J => 1.25,
                     H => 1.65, 
                     K => 2.20,
                     L => 3.45,

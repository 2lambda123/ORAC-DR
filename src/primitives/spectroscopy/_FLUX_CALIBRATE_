                    M5 => 0.33,
                    M6 => 0.38,
                  );

  # (K-L) colour by spectral type.
    my %kminusl = (
                    O6 => -0.07,
                    O7 => -0.07,
                    O8 => -0.07,
                    O9 => -0.06,
                    B0 => -0.06,
                    B1 => -0.05,
                    B2 => -0.05,
                    B3 => -0.05,
                    B4 => -0.05,
                    B5 => -0.04,
                    B6 => -0.04,
                    B7 => -0.04,
                    B8 => -0.03,
                    B9 => -0.02,
                    A0 => 0.00,
                    A1 => 0.00,
                    A2 => 0.01,
                    A3 => 0.01,
                    A4 => 0.02,
                    A5 => 0.02,
                    A6 => 0.02,
                    A7 => 0.03,
                    A8 => 0.03,
                    A9 => 0.03,
                    F0 => 0.03,
                    F1 => 0.03,
                    F2 => 0.03,
                    F3 => 0.03,
                    F4 => 0.04,
                    F5 => 0.04,
                    F6 => 0.04,
                    F7 => 0.04,
                    F8 => 0.04,
                    F9 => 0.05,
                    G0 => 0.05,

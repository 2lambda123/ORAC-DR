my $title = get_prim_arg($_PRIM_ARGS_, 'TITLE', undef);
my $out = get_prim_arg($_PRIM_ARGS_, 'OUT', undef);

orac_termerr('TITLE or OUT missing')
    unless defined $title and defined $out;

orac_termerr('Not implemented');


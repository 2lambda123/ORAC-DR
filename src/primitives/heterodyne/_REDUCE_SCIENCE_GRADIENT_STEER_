# Verify recipe parameters.
ORAC::Recipe::Parameters::verify_parameters( \%RECPARS, [ 'BASELINE_ORDER',
                                                          'CUBE_WCS',
                                                          'PIXEL_SCALE',
                                                          'SPREAD_FWHM_OR_ZERO',
                                                          'SPREAD_METHOD',
                                                          'SPREAD_WIDTH' ] );

# Put recipe parameters into our uhdr.
if( defined( $RECPARS{'BASELINE_ORDER'} ) ) {
  $Frm->uhdr( "RECPAR_BASELINE_ORDER", $RECPARS{'BASELINE_ORDER'} );
  orac_say( "Setting baseline order to $RECPARS{'BASELINE_ORDER'} via recipe parameter file.", "yellow" );
}

if( defined( $RECPARS{'SPREAD_METHOD'} ) ) {
  $Frm->uhdr( "RECPAR_SPREAD_METHOD", uc( $RECPARS{'SPREAD_METHOD'} ) );
  orac_say( "Setting MAKECUBE spread method to $RECPARS{'SPREAD_METHOD'} via recipe parameter file.", "yellow" );
}

if( defined( $RECPARS{'SPREAD_WIDTH'} ) ) {
  $Frm->uhdr( "RECPAR_PARAM1", $RECPARS{'SPREAD_WIDTH'} );
  orac_say( "Setting MAKECUBE spread width to $RECPARS{'SPREAD_WIDTH'} arcseconds via recipe parameter file.", "yellow" );
}

if( defined( $RECPARS{'SPREAD_FWHM_OR_ZERO'} ) ) {
  $Frm->uhdr( "RECPAR_PARAM2", $RECPARS{'SPREAD_FWHM_OR_ZERO'} );
  orac_say( "Setting MAKECUBE spread FWHM or zero to $RECPARS{'SPREAD_FWHM_OR_ZERO'} arcseconds via recipe parameter file.", "yellow" );
}

if( defined( $RECPARS{'PIXEL_SCALE'} ) ) {
  $Frm->uhdr( "RECPAR_PIXSIZE", $RECPARS{'PIXEL_SCALE'} );
  orac_say( "Setting pixel scale to $RECPARS{'PIXEL_SCALE'} arcseconds per pixel via recipe parameter file.", "yellow" );
}

if( defined( $RECPARS{'CUBE_WCS'} ) ) {
  $Frm->uhdr( "RECPAR_SYSTEM", uc( $RECPARS{'CUBE_WCS'} ) );
  orac_say( "Setting cube coordinate system to $RECPARS{'CUBE_WCS'} via recipe parameter file.", "yellow" );
}



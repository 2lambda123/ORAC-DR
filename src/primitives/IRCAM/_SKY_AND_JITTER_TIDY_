# _SKY_AND_JITTER_TIDY_      -*- perl -*-
#
# Removes unwanted intermediate files for the SKY_AND_JITTERn_ recipes
# and their variants.
    
# Removed intermediate files stored $Frm->file method.
    _DELETE_TEMP_FILES_ KEEP=_db,_ff

# Certain files can only be removed once certain steps are complete,
# and then only as a group.  So determine if it's time to remove these
# files.
    my $mademosaic = $Frm->hdr( "MAKE_MOSAIC" );

# Remove the remaining files from this cycle used to make the mosaic.
    if ( $mademosaic ) {
       {
          my $Grp = $Grp;
          _DELETE_TEMP_GROUP_FILES_ DELETE=_trn
          undef $Grp;
       }

# Remove the _db files except the filed flat.
       my $targrp = $Grp->subgrp( "FILE_SKY" => 0 );
       {
          my $Grp = $targrp;
          _DELETE_TEMP_GROUP_FILES_ DELETE=_db
          undef $Grp;
       }
       undef $targrp;
    }

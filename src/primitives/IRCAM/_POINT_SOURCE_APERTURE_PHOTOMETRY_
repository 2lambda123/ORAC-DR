# Primitive to compute aperture photometry from an image.
#

# This should only be performed on OBJECT frames.
    if ($Frm->hdr(OBSTYPE) =~ /OBJECT/) {
  
# Do this once a group file has been created
       if ($Grp->num >= 2 ) {

          _INIT_KAPPA_PHOTOM_
          _ESTIMATE_PSF_
          _APERTURE_CORRECTION_
          _APERTURE_PHOTOMETRY_
       };
    };

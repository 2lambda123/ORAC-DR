# orac_michtemp: Michelle temporary startup script for oracdr

# $Id$


# orac things
if !($?ORAC_DATA_ROOT) then
    setenv ORAC_DATA_ROOT /ukirtdata
endif

if !($?ORAC_CAL_ROOT) then
    setenv ORAC_CAL_ROOT /ukirt_sw/oracdr_cal
endif


if ($1 != "") then
    set ut = $1
else
    set ut = `/usr/bin/date -u +%Y%m%d`
endif

alias oracdr "$ORAC_DIR/bin/oracdr -ut $ut"


setenv ORAC_INSTRUMENT MichTemp

setenv ORAC_DATA_IN $ORAC_DATA_ROOT/michelle_data/$ut/raw/

setenv ORAC_DATA_OUT  $ORAC_DATA_ROOT/michelle_data/$ut/reduced/

setenv ORAC_DATA_CAL $ORAC_CAL_ROOT/michelle

# extra for MichTemp

setenv ORAC_RECIPE_DIR $ORAC_DIR/recipes/Michelle
setenv ORAC_PRIMITIVE_DIR $ORAC_DIR/primitives/Michelle



# screen things
setenv ORAC_PERSON frossie
setenv ORAC_LOOP wait
# print greeting screen
$ORAC_DIR/etc/orac_screen


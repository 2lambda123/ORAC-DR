# orac_ufti: UFTI startup script for oracdr

# $Id$


# orac things
if !($?ORAC_DATA_ROOT) then
    setenv ORAC_DATA_ROOT /ukirtdata
endif

if !($?ORAC_CAL_ROOT) then
    setenv ORAC_CAL_ROOT /ukirt_sw/oracdr_cal
endif


if ($1 != "") then
    set ut = $1
else
    set ut = `/usr/bin/date -u +%Y%m%d`
endif

alias oracdr "$ORAC_DIR/bin/oracdr -ut $ut"


setenv ORAC_INSTRUMENT UFTI
setenv ORAC_DATA_IN $ORAC_DATA_ROOT/ufti_data/$ut/raw/
setenv ORAC_DATA_OUT  $ORAC_DATA_ROOT/ufti_data/$ut/reduced/
setenv ORAC_DATA_CAL $ORAC_CAL_ROOT/ufti


# screen things
setenv ORAC_PERSON mjc
setenv ORAC_LOOP flag
# print greeting screen
$ORAC_DIR/etc/orac_screen

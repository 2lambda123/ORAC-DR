_JCMT_SETUP_

_CREATE_JSA_EXTENT_CAT_

_CREATE_JSA_PEAKS_CAT_

_DELETE_TEMP_FILES_ KEEP=_extents,_extents.FITS,_peaks.FITS ALSOGRP=1 VERBOSE=1


_SCUBA2_HELLO_

# Obtain the power spectrum of the timestream
_FFT_DATA_ POWER=1

# Use the power spectrum to define working bolometers and thence a bad
# bolometer mask (aka bad pixel mask)
_CREATE_BAD_BOLO_MASK_ MASKVAL=10.0

# Note that the last file created by the frame will not be deleted
# because it is never replaced by anything so will never get pushed
# onto the intermediates array. No reason to keep power spectra/FFT
# files so delete them too.
_DELETE_TEMP_FILES_ KEEP=none

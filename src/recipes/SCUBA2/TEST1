#_SCUBA2_HELLO_

_ALIGN_AND_MOSAIC_SUBARRAY_ METHOD=nearest

#_EXTINCTION_CORRECT_FRAME_ EXTCOR_MODE=FULL

_REMOVE_DC_SKY_

#_REMOVE_SKY_PLANE_

_ALIGN_AND_MOSAIC_ COMBINE=MEAN METHOD=sincsinc

#_MAKE_MOSAIC_FRAME_ METHOD=MEAN

#_DISPLAY_FRAME_

_MAKE_MOSAIC_GROUP_   COADD_MODE=RUNNING

_DISPLAY_GROUP_


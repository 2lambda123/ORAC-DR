_SCUBA2_HELLO_

_MAKE_MOSAIC_FRAME_ METHOD=MEAN

_DISPLAY_FRAME_

_MAKE_MOSAIC_GROUP_ COADD_MODE=RUNNING

_FIND_VARIANCE_

_DISPLAY_GROUP_

_DELETE_TEMP_FILES_ KEEP=none

_DELETE_FRAME_FILE_



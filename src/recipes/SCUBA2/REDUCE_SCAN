# Standard intro
_SCUBA2_HELLO_

# #### ITERATE ####
# Flatfield incoming data - for iterate method ONLY
_FLATFIELD_
# For iterate method, find the mean sky level for logging purposes
_CALC_DC_SKY_
# Create image to analyze
_MAKEMAP_FRAME_ METHOD=ITER NUMITER=2
# #### ITERATE ####

# #### REBIN ####
# Remove sky and correct for extinction
# Uncomment the following 2 lines for REBIN method ONLY!
#_REMOVE_PLANE_FROM_IMAGE_
#_EXTINCTION_CORRECT_FRAME_
# Create image to analyze
#_MAKEMAP_FRAME_ METHOD=REBIN
#_QLMAKEMAP_FRAME_
# #### REBIN ####

# Calibrate data
_FIND_CALIBRATION_MAP_
_CALIBRATE_DATA_

# Uncomment this to display the frame mosaic
_DISPLAY_FRAME_

# Add the new frame mosaic into the group
_MAKE_MOSAIC_GROUP_ METHOD=BILINEAR COADD_MODE=RUNNING

# Determine the mean sky noise from the variance in the image
_CALC_IMAGE_NOISE_ METHOD=VARIANCE GROUP=1

# Display the group mosaic
_DISPLAY_GROUP_

# Delete any temporary files
_DELETE_TEMP_FILES_ KEEP=_cal

# Standard intro
_SCUBA2_HELLO_

# Remove sky and correct for extinction
# Uncomment the following 2 lines for REBIN method ONLY!
#_REMOVE_PLANE_FROM_IMAGE_
#_EXTINCTION_CORRECT_FRAME_

# Create image to analyze
#_MAKEMAP_FRAME_ METHOD=REBIN
_MAKEMAP_FRAME_ METHOD=ITER MODELORDER=COM,NOI EXPORTNDF=0 NUMITER=2 VERBOSE=2

# Uncomment this to display the frame mosaic
#_DISPLAY_FRAME_

# Add the new frame mosaic into the group
_MAKE_MOSAIC_GROUP_ METHOD=BILINEAR

# Delete excess Frame objects from the Group
#_PURGE_FRAMES_

# Determine the mean sky noise from the variance in the image
_CALC_SKY_NOISE_ SKYMETHOD=VARIANCE GROUP=1

# Display the group mosaic
_DISPLAY_GROUP_

# Calculate FCF
# No primitive exists yet

# The following should be uncommented...

# Note that the last file created by the frame will not be
# deleted because it is never replaced by anything so will never
# get pushed onto the intermediates array
#_DELETE_TEMP_FILES_ KEEP=none

#_DELETE_FRAME_FILE_
